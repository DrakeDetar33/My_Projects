@model FinalPracticeMVC.Models.ProteinAnimalViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Proteins" asp-action="Index" method="get">

    <p>
        <select asp-for="Animal" asp-items="Model.Animal">
            <option value="">
                All
            </option>
        </select>
        Title:<input type="text" name="SearchString" asp-for="SearchString"/>
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Proteins[0].Animal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Proteins[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Proteins[0].ServingSize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Proteins[0].ProteinTot)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Proteins[0].FatTot)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Proteins[0].Calories)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Proteins)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Animal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServingSize)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProteinTot)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FatTot)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Calories)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
